{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["ES2021", "DOM"],
    "moduleResolution": "Bundler",
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["react", "react-native", "expo-router"],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts"
  ]
}
